    "@fastify/websocket": "^11.2.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.0.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.4.0",
    "fastify-static": "^4.6.1",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
