{
  "name": "transcendence",
  "version": "1.0.0",
  "private": true,
  "main": "dist/server.js",
  "type": "commonjs",
  "workspaces": [
    "services/game-service",
    "services/api-gateway",
    "services/auth-user-service"
  ],
  "scripts": {
    "dev": "concurrently -k -n auth-user-service,game-service,api-gateway,frontend -c cyan,green,magenta,yellow \"npm:dev:auth-user-service\" \"npm:dev:game-service\" \"npm:dev:api-gateway\" \"npm:dev:frontend\"",
    "dev:auth-user-service": "NODE_ENV=development ts-node-dev --project services/auth-user-service/tsconfig.json --respawn --transpile-only services/auth-user-service/src/server.ts",
    "dev:game-service": "NODE_ENV=development ts-node-dev --project services/game-service/tsconfig.json --respawn --transpile-only services/game-service/src/server.ts",
    "dev:api-gateway": "NODE_ENV=development ts-node-dev --project services/api-gateway/tsconfig.json --respawn --transpile-only services/api-gateway/src/server.ts",
    "dev:frontend": "cd frontend-src && vite",
    "docker:build:game-service": "docker compose build game-service",
    "docker:build:auth-user-service": "docker compose build auth-user-service",
    "docker:build:api-gateway": "docker compose build api-gateway",
    "docker:build": "npm run docker:build:game-service && npm run docker:build:api-gateway",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps",
    "build": "npm run docker:build && npm run build:frontend",
    "build:frontend": "cd frontend-src && vite build",
    "start": "npm run build && npm run docker:up",
    "format": "prettier --write \"**/*.ts\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.1",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.0",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  }
}
