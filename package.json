{
  "name": "transcendence",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node src/server.ts",
    "build:frontend": "tsc -p frontend-src/tsconfig.json",
    "build:backend": "tsc -p src/tsconfig.json",
    "build:css": "tailwindcss -c tailwind.config.ts -i ./public/css/input.css -o ./public/css/output.css",
    "watch:css": "tailwindcss -c tailwind.config.ts -i ./public/css/input.css -o ./public/css/output.css --watch",
    "build": "npm run build:backend && npm run build:frontend && npm run build:css",
    "start": "ts-node src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
